---
import Container from "./ui/Container.astro";
---

<section id="speakers">
  <Container>
    <h1
      class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl mb-16"
    >
      Keynote Speakers
    </h1>
    <div class="flex flex-wrap justify-center gap-6 z-20">
      <div class="bg-background rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img
            class="rounded-md"
            src="https://media.istockphoto.com/vectors/default-placeholder-profile-icon-vector-id666542874?k=6&m=666542874&s=612x612&w=0&h=51neckTVJA8FxzPQs08oR50k6987AOIv97ugl3DYjLc="
          />
          <div class="text-center">
            <h3 class="text-lg font-semibold">
              Eminent speaker from ACM
              <br />
              Confirmation Awaited
            </h3>
            <!-- <p class="text-muted-foreground">
              Associate Dean, Chemical Engineering
            </p> -->
          </div>
        </div>
      </div>

      <div class="bg-background rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img
            class="rounded-md"
            src="https://media.istockphoto.com/vectors/default-placeholder-profile-icon-vector-id666542874?k=6&m=666542874&s=612x612&w=0&h=51neckTVJA8FxzPQs08oR50k6987AOIv97ugl3DYjLc="
          />
          <div class="text-center">
            <h3 class="text-lg font-semibold">
              Eminent speaker from IIT
              <br />
              Confirmation Awaited
            </h3>
            <!-- <p class="text-muted-foreground">
              Associate Dean, Chemical Engineering
            </p> -->
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
