---
import Container from "./Container.astro";
---

<Container>
  <section>
    <h1
      class="text-center text-4xl font-bold text-gray-800 dark:text-white md:text-5xl mb-16"
    >
      Keynote Speakers
    </h1>
    <div class="flex flex-wrap justify-center gap-6 z-20">
      <div class="bg-background rounded-lg shadow-lg max-w-xs">
        <div class="p-6 space-y-4 flex flex-col items-center">
          <img class="rounded-md" src="https://placehold.co/300" />
          <div class="text-center">
            <h3 class="text-lg font-semibold">Dr. John Doe</h3>
            <p class="text-muted-foreground">
              Associate Dean, Chemical Engineering
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Container>
