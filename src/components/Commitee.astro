---

<Container>
  <Tabs class="w-full">
    <Fragment slot="tab-1">
      <h2
        class="text-xl font-semibold px-4 py-2 border hover:bg-slate-100 transition-all rounded-l-lg"
      >
        Steering Committee
      </h2>
    </Fragment>
    <Fragment slot="tab-2">
      <h2
        class="text-xl font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
      >
        General Chairs
      </h2>
    </Fragment>
    <Fragment slot="tab-3">
      <h2
        class="text-xl font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
      >
        Conference Chairs
      </h2>
    </Fragment>
    <Fragment slot="tab-4">
      <h2
        class="text-xl font-semibold px-4 py-2 border hover:bg-slate-100 transition-all rounded-r-lg"
      >
        Publication Chairs
      </h2>
    </Fragment>

    <Fragment slot="panel-1">
      <h3 class="text-2xl font-semibold p-4 mt-4 text-center">
        Steering Committee
      </h3>
      <ul class="divide-y divide-gray-200 dark:divide-gray-700">
        {
          STEERING_COMMITTEE.map(({ name, position }) => (
            <li class="py-4 sm:py-5">
              <div class="flex items-center space-x-4">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                    {name}
                  </p>
                  <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                    {position}
                  </p>
                </div>
              </div>
            </li>
          ))
        }
      </ul>
    </Fragment>
    <Fragment slot="panel-2">
      <h3 class="text-2xl font-semibold p-4 mt-4 text-center">
        General Chairs
      </h3>
      <ul class="divide-y divide-gray-200 dark:divide-gray-700">
        {
          GENERAL_CHAIRS.map(({ name, position }) => (
            <li class="py-4 sm:py-5">
              <div class="flex items-center space-x-4">
                <div class="flex-1 min-w-0">
