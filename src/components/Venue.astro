---
import Container from "./ui/Container.astro";
---

<Container>
  <section id="venue" class="text-center space-y-4">
    <h1 class="text-4xl font-bold text-gray-800 dark:text-white md:text-5xl">
      Venue
    </h1>
    <!-- address -->
    <div class="text-center">
      <p class="text-lg font-medium">
        GSFC University, Vigyan Bhavan, P. O, Fertilizer Nagar, Vigyan Bhavan,
        Vadodara - 391750, Gujarat, India
      </p>
    </div>
    <!-- maps iframe -->
    <div class="w-full my-8 rounded-md">
      <iframe
        width="100%"
        height="600"
        class="overflow-hidden rounded-lg"
        src="https://maps.google.com/maps?width=100%25&height=600&hl=en&q=+(GSFC%20University)&t=&z=16&ie=UTF8&iwloc=B&output=embed"
        />
    </div>
  </section>
</Container>
