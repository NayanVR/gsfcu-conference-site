---

<section id="committee">
  <Container>
    <h1
      class="text-4xl font-bold text-gray-800 dark:text-white md:text-5xl text-center mb-12"
      id="commitee"
    >
      Committee
    </h1>

    <Tabs class="w-full">
      <Fragment slot="tab-1">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all rounded-l-lg"
        >
          Chief Patron
        </h2>
      </Fragment>
      <Fragment slot="tab-2">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
        >
          Advisory Committee
        </h2>
      </Fragment>
      <Fragment slot="tab-3">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
        >
          Technical Program Committee
        </h2>
      </Fragment>
      <Fragment slot="tab-4">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
        >
          Conference Chair
        </h2>
      </Fragment>
      <Fragment slot="tab-5">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
        >
          Convenors
        </h2>
      </Fragment>
      <Fragment slot="tab-7">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all"
        >
          Organizing Committee
        </h2>
      </Fragment>
      <Fragment slot="tab-8">
        <h2
          class="text-lg font-semibold px-4 py-2 border hover:bg-slate-100 transition-all rounded-r-lg"
        >
          Editorial Team
        </h2>
      </Fragment>

      <Fragment slot="panel-1">
        <h3 class="text-2xl font-bold p-4 mt-4 text-center text-primary">
          Chief Patron
        </h3>
        <ul class="divide-y divide-gray-200 dark:divide-gray-700">
          {
            CHIEF_PATRON.map(({ name, position }) => (
              <li class="py-4 sm:py-5">
                <div class="flex flex-col items-center">
                  <p class="text-xl font-medium text-gray-900 dark:text-white">
                    {name}
                  </p>
                  <p class="text-xl text-gray-500 dark:text-gray-400">
