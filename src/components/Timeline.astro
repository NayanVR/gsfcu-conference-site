---
import Container from "./Container.astro";

const dayOne = [
  {
    time: "10:00 AM",
    title: "Introduction",
    description: "Welcome and introductions",
  },
  {
    time: "10:30 AM",
    title: "Keynote",
    description: "Keynote Speaker",
  },
  {
    time: "11:00 AM",
    title: "Break",
    description: "Break time",
  },
  {
    time: "11:30 AM",
    title: "Keynote",
    description: "Keynote Speaker",
  },
  {
    time: "12:00 PM",
    title: "Break",
    description: "Break time",
  },
  {
    time: "12:30 PM",
    title: "Keynote",
    description: "Keynote Speaker",
  },
  {
    time: "01:00 PM",
    title: "Break",
    description: "Break time",
  },
  {
    time: "01:30 PM",
    title: "Keynote",
    description: "Keynote Speaker",
  },
  {
    time: "02:00 PM",
    title: "Break",
    description: "Break time",
  },
  {
    time: "02:30 PM",
    title: "Keynote",
    description: "Keynote Speaker",
  },
  {
    time: "03:00 PM",
    title: "Break",
    description: "Break time",
  },
  {
    time: "03:30 PM",
    title: "Keynote",
    description: "Keynote Speaker",
  },
];
---

<Container>
  <section
    class="flex flex-col md:flex-row gap-24 justify-center"
    id="schedule"
  >
    <div>
      <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">
        Day 1 - 20th January
      </h2>
      <div class="my-6">
        {
          dayOne.map(({ time, title, description }) => (
            <div class="relative pl-8 sm:pl-32 py-2 group">
              <div class="flex flex-col sm:flex-row items-start mb-1 group-last:before:hidden before:absolute before:left-2 sm:before:left-0 before:h-full before:px-px before:bg-slate-300 sm:before:ml-[6.5rem] before:self-start before:-translate-x-1/2 before:translate-y-3 after:absolute after:left-2 sm:after:left-0 after:w-2 after:h-2 after:bg-primary after:border-4 after:box-content after:border-slate-50 after:rounded-full sm:after:ml-[6.5rem] after:-translate-x-1/2 after:translate-y-1.5">
                <time class="sm:absolute left-0 translate-y-0.5 inline-flex items-center justify-center text-xs font-semibold uppercase w-20 h-6 mb-3 sm:mb-0 text-emerald-600 bg-emerald-100 rounded-full">
                  {time}
                </time>
                <div class="text-xl font-bold text-slate-900">{title}</div>
              </div>
              <div class="text-slate-500">{description}</div>
            </div>
          ))
        }
      </div>
    </div>

    <div>
      <h2 class="text-3xl font-bold text-gray-800 md:text-4xl dark:text-white">
        Day 2 - 21st January
      </h2>
      <div class="my-6">
        {
          dayOne.map(({ time, title, description }) => (
            <div class="relative pl-8 sm:pl-32 py-2 group">
              <div class="flex flex-col sm:flex-row items-start mb-1 group-last:before:hidden before:absolute before:left-2 sm:before:left-0 before:h-full before:px-px before:bg-slate-300 sm:before:ml-[6.5rem] before:self-start before:-translate-x-1/2 before:translate-y-3 after:absolute after:left-2 sm:after:left-0 after:w-2 after:h-2 after:bg-primary after:border-4 after:box-content after:border-slate-50 after:rounded-full sm:after:ml-[6.5rem] after:-translate-x-1/2 after:translate-y-1.5">
                <time class="sm:absolute left-0 translate-y-0.5 inline-flex items-center justify-center text-xs font-semibold uppercase w-20 h-6 mb-3 sm:mb-0 text-emerald-600 bg-emerald-100 rounded-full">
                  {time}
                </time>
                <div class="text-xl font-bold text-slate-900">{title}</div>
              </div>
              <div class="text-slate-500">{description}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Container>
